<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="cross_piece" params="name parent rot1 rot2 pitch2roll">
    
    <link name="${name}_cross_piece_${rot1}">
      <visual>
          <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
          <geometry>
              <mesh filename="package://robotic_neck_viz/urdf/models/cross_piece/mesh/cross_piece.dae" />
          </geometry>
      </visual>
    </link>

    <joint name="${name}_cross_piece_${rot1}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}_cross_piece_${rot1}"/>
      <axis xyz="${1 - pitch2roll} ${pitch2roll} 0"/>
    </joint>
    
    <link name="${name}_cross_piece_${rot2}"/>

    <joint name="${name}_cross_piece_${rot2}_joint" type="continuous">
      <parent link="${name}_cross_piece_${rot1}"/>
      <child link="${name}_cross_piece_${rot2}"/>
      <axis xyz="${pitch2roll} ${1 - pitch2roll} 0"/>
    </joint>

  </xacro:macro>
</robot>
